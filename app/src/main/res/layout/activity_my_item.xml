<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:siv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yyc.customviews.search.MyItemActivity">

    <com.yyc.plugslib.itemView.SettingItemView
        android:id="@+id/set_view"
        android:layout_width="0dp"
        android:layout_height="80dp"
        siv:imgleft_drawable="@drawable/yi"
        siv:title_text="我是好人啊！"
        siv:imgleft_width="76dp"
        siv:imgleft_height="76dp"
        android:layout_marginTop="20dp"
        siv:border_height="2dp"
        siv:left_text="我是参数值"
        siv:is_show_border="true"
        android:background="#ff0"
        app:title_text_marginleft="10dp"
        />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击我"
        />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击我1"
        />

    <LinearLayout
        android:id="@+id/llyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:inAnimation="@anim/slide_in_top"
        android:outAnimation="@anim/slide_out_top"
        android:animateLayoutChanges="true"
        >

        <TextView
            android:id="@+id/tv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="动画"
            android:background="#f00"
            android:visibility="visible"

            />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="动画"
            android:background="#ff0"
            android:visibility="visible"
            />

    </LinearLayout>


</LinearLayout>
